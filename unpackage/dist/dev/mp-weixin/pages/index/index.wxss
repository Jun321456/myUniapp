
.pet-home {
  background: #f8f9fa;
}
.banner.no-img {
  width: 100vw;
  height: 320rpx;
  background: linear-gradient(90deg, #ffecd2 0%, #fcb69f 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 8rpx;
  text-shadow: 2rpx 4rpx 12rpx #fcb69f;
}
.welcome {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}
.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}
.sub-title {
  font-size: 28rpx;
  color: #888;
  margin-top: 10rpx;
}
.pet-list-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 0 20rpx 30rpx;
  color: #444;
}
.pet-list {
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  margin-bottom: 30rpx;
}
.pet-card {
  width: 180rpx;
  margin-right: 24rpx;
  border-radius: 18rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: box-shadow 0.2s;
}
.pet-card:active {
  box-shadow: 0 4rpx 16rpx #ccc;
}
.pet-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  font-size: 64rpx;
  box-shadow: 0 2rpx 8rpx #f0f0f0;
}
.pet-emoji {
  font-size: 64rpx;
}
.pet-info {
  padding: 12rpx 0 20rpx 0;
  text-align: center;
}
.pet-name {
  font-size: 28rpx;
  color: #222;
  font-weight: bold;
}
.pet-type {
  font-size: 22rpx;
  color: #888;
}
